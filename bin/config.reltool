%% -*- erlang -*-
{sys,[{lib_dirs, ["../lib"]},
      {boot_rel, "start"},
      {rel, "start","1.0",
       [sasl, ssl, salt, jsx, procket, tunctl, common, ds, node]},
      {rel, "start_clean", "1.0", []},
      {incl_cond, exclude},
      {profile, standalone},
      {debug_info, strip},
      {excl_sys_filters,
       {add, ["^bin/epmd\$",
              "^erts.*/bin/(beam|epmd|heart)\$"]}},
