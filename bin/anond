#!/bin/sh

function usage {
    echo "Usage: $0 [-c CONFIG-FILENAME] [-i]"
    echo "Usage: $0 -s [-a IP-ADDRESS] [-p PORT]"
    echo "Usage: $0 -r [-a IP-ADDRESS] [-p PORT]"
    exit 1
}

args=options=$(getopt -u "c:sra:p:i" -- "$@")

set -- $args

bindir=`dirname $0`
erl=${bindir}/erl
boot=" -boot ${bindir}/start"
mode="daemon"
config=""
address=""
port=""
interactive="no"
pa=""

# @DEVEL_ONLY_START
if [ ! -f ${erl} ]; then
    erl="erl"
    pa=" -pa ${bindir}/../lib/common/ebin -pa ${bindir}/../lib/ds/ebin -pa ${bindir}/../lib/jsx/ebin -pa ${bindir}/../lib/node/ebin -pa ${bindir}/../lib/procket/ebin -pa ${bindir}/../lib/salt/ebin -pa ${bindir}/../lib/test/ebin -pa ${bindir}/../lib/tunctl/ebin -pa ${bindir}/../lib/util/ebin"
fi
# @DEVEL_ONLY_STOP

while [ $# -gt 0 ]; do
    case $1 in
        -c)
            config=" --config $2"
            shift
            ;;
        -s)
            mode="stop"
            boot=" -boot ${bindir}/start_clean"
            ;;
        -r)
            mode="reload"
            boot=" -boot ${bindir}/start_clean"
            ;;
        -a)
            address=" --control-address $2"
            shift
            ;;
        -p)
            port=" --control-port $2"
            shift
            ;;
        -i)
            interactive="yes"
            ;;
        --)
            ;;
        -*)
            usage
            ;;
        *)
            ;;
    esac
    shift
done

if [ ${interactive} = "yes" ]; then
    shell=""
else
    if [ ${mode} = "daemon" ]; then
        shell=" -detached"
    else
        shell=" -noinput"
    fi
fi

case ${mode} in
    daemon)
        exec ${erl}${shell}${pa}${boot}${config}
        break
        ;;
    stop)
        exec ${erl}${shell}${pa}${boot}${address}${port} -run common_config_json_serv stop
        break
        ;;
    reload)
        break
        ;;
esac
